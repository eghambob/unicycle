<script id="character_template" type="text/x-handlebars-template">
<li>
<dl>
<dt class="description">{{description}}</dt>
<dd class="code">{{code}}</dd>
<dd class="hex">{{hex}}</dd>
<dd class="ref">{{ref}}</dd>
</dl>
</li>
</script>


<script id="pagination_template" type="text/x-handlebars-template">
{{#if has_previous_page}}
<a id="previous_page" class="previous_page" rel="prev" href="{{previous_page.to_i}}">← <span>Previous</span></a>
{{else}}
<span class="previous_page disabled">← <span>Previous</span></span>
{{/if}}
<span class="total">Page {{current_page_number}} of {{total_pages}}</span>
{{#if has_next_page }}
<a id="next_page" class="next_page" rel="next" href="{{next_page}}"><span>Next</span> →</a>
{{else}}
<span class="next_page disabled"><span>Next</span> →</span>
{{/if}}
</script>